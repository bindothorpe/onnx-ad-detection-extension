{
  "manifest_version": 3,
  "name": "Ad Detector Extension",
  "version": "0.1.0",
  "description": "Automatically detects advertisements in video content using ML",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Ad Detector",
    "default_popup": "model.html"
  },
  "sandbox": {
    "pages": ["model.html"]
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/watch*"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "activeTab"
  ],
  "web_accessible_resources": [
    {
      "resources": ["model.html", "models/ad_detector.onnx"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "sandbox": "sandbox allow-scripts; script-src 'unsafe-eval';"
  }
}